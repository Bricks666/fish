{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src.old/**.*"],
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@old/*": ["src.old/*"]
		}
	},

	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
